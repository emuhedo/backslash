<table class="table">
  <tbody>
    <tr>
      <td><strong>Exception type</strong></td>
      <td>{{error.exception_type}}</td>
    </tr>
    <tr>
      <td><strong>Exception Message</strong></td>
      <td><pre class="vw-50">{{error.message}}</pre></td>
    </tr>
    <tr>
      <td><strong>Timestamp</strong></td>
      <td>{{moment-time unix=error.timestamp}}</td>
    </tr>
  </tbody>
</table>

{{#if loading}}
  {{animated-spinner}}
{{else}}
  {{#if (and error.traceback_url (not error.traceback))  }}
    <div class="box error">
      <div class="info">
	Could not load traceback
      </div>
    </div>
  {{else}}
    {{#each error.traceback as |frame|}}
      {{errors/traceback-frame frame=frame}}
    {{/each}}
  {{/if}}
{{/if}}
